<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D80101"
            android:onClick="showMoney"
            android:text="MONEY CONVERSION"
            android:textColor="#EFEBE9" />

        <Button
            android:id="@+id/btRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D80101"
            android:onClick="showRegistration"
            android:text="REGISTRATION"
            android:textColor="#EFEBE9" />

        <Button
            android:id="@+id/btDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D80101"
            android:onClick="showDashboard"
            android:text="DASHBOARD"
            android:textColor="#EFEBE9" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>





